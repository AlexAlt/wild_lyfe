<h1> <%= @species.name %></h1>

<% if @species.sightings.any? %>
  <h4>Here are the sightings for this species</h4>

  <ul>
    <% @species.sightings.each do |sighting| %>
    <li>
      <%= sighting.date %> |
      <%= link_to "Edit", edit_species_path(@species, sighting) %>
      <%= link_to "Delete", species_sighting_path(@species, sighting),
                               :data => {:confirm => "You sure?",
                                         :method => "delete"} %>
    </li>
    <% end %>
  </ul>
  <% else %>
    <p>None yet</p>
<% end %>

<p><%= link_to "Return to species", species_index_path %></p>
<p><%= link_to "Edit", edit_species_path(@species) %></p>
<p><%= link_to "Add a sighting", new_species_sighting_path(@species) %></p>
<p><%= link_to "Delete", species_path(@species),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
